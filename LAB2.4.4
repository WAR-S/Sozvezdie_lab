 void swap(int& n1, int& n2)
{
    int _t = n1;
    n1 = n2;
    n2 = _t; 
    
}




int shuttle_sorting(int *A,int n) // Сортировка челноком
{
      for (int i = 0; i < n-1; i++)
        if (A[i] > A[i+1])
        {
            swap(A[i],A[i+1]);
            for (int k = i; (A[k] < A[k-1]) && (k >= 1); k--)
                swap(A[k],A[k-1]);
        }
    print_massive(A,n);
}
